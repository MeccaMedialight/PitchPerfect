{
  "name": "PitchPerfect",
  "version": "1.0.0",
  "description": "A Capacitor.js app for playing PitchPerfect presentations on iPad iOS",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "npm run build:web",
    "build:web": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "ios": "npx cap run ios",
    "android": "npx cap run android",
    "sync": "npx cap sync",
    "open:ios": "npx cap open ios",
    "open:android": "npx cap open android",
    "test": "echo \"Error: no test specified\" && exit 1",
    "startup": "node startup.js",
    "startup:mac": "chmod +x startup.sh && ./startup.sh",
    "startup:linux": "chmod +x startup.sh && ./startup.sh",
    "startup:windows": "startup.bat"
  },
  "keywords": ["capacitor", "presentation", "player", "ipad", "ios"],
  "author": "PitchPerfect Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "concurrently": "^8.2.2"
  }
}
